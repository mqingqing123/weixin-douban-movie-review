<template name="starsTemplate">
  <view class="stars-container">
    <view class="stars">
      <block wx:if="{{stars == '0'}}">
        <image src="../../images/none-star.png"></image>
        <image src="../../images/none-star.png"></image>
        <image src="../../images/none-star.png"></image>
        <image src="../../images/none-star.png"></image>
        <image src="../../images/none-star.png"></image>
      </block>
      <block wx:elif="{{stars == '1'}}">
        <image src="../../images/star.png"></image>
        <image src="../../images/none-star.png"></image>
        <image src="../../images/none-star.png"></image>
        <image src="../../images/none-star.png"></image>
        <image src="../../images/none-star.png"></image>
      </block>
      <block wx:elif="{{stars == '2'}}">
        <image src="../../images/star.png"></image>
        <image src="../../images/star.png"></image>
        <image src="../../images/none-star.png"></image>
        <image src="../../images/none-star.png"></image>
        <image src="../../images/none-star.png"></image>
      </block>
      <block wx:elif="{{stars == '3'}}">
        <image src="../../images/star.png"></image>
        <image src="../../images/star.png"></image>
        <image src="../../images/star.png"></image>
        <image src="../../images/none-star.png"></image>
        <image src="../../images/none-star.png"></image>
      </block>
      <block wx:elif="{{stars == '4'}}">
        <image src="../../images/star.png"></image>
        <image src="../../images/star.png"></image>
        <image src="../../images/star.png"></image>
        <image src="../../images/star.png"></image>
        <image src="../../images/none-star.png"></image>
      </block>
      <block wx:else>
        <image src="../../images/star.png"></image>
        <image src="../../images/star.png"></image>
        <image src="../../images/star.png"></image>
        <image src="../../images/star.png"></image>
        <image src="../../images/star.png"></image>
      </block>
    </view>
    <text class="star-score">{{score}}</text>
  </view>
</template>